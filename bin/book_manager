#!/bin/sh


# ====== 変数の設定 ======
# 環境変数の設定
export LC_ALL=C
export LANG=C

# GNU coreutilsの挙動をPOSIXに準拠
export POSIXLY_CORRECT=1

# デフォルトの変数
isbn="not_input"

set -e
	
# 引数の有無を確認,あれば真,無ければ偽
if [ -n "${1}" ] ; then

	# 真の場合は保存先を引数で指定
	file="${1}"

else 

	# 偽の場合は出力を捨てる
	file="/dev/null"

fi

set -u
# ====== 変数の設定ここまで ======


# 対話的に処理
while :
do

	# 入力が"Q"以外若しくは初期値の場合に真,それ以外で偽
	if [ "${isbn}" != "Q" ] ; then
		
		# プロンプトを表示して入力を読み取る 
		printf 'please enter ISBN > ' && read -r isbn
	
		echo ""
	
		# apiを叩く
		echo "${isbn}" | bm_core |

		# 指定ファイルに追記,指定されてない場合は/dev/nullへ
		tee -a "${file}"
	
		echo "" 

	else

		# メッセージを標準エラー出力に表示
		echo "finish input" 1>&2

		# whileのループから脱出
		exit 0	

	fi

done

