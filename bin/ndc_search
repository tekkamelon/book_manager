#!/bin/sh 

set -e

# ====== 変数の設定 ======
# 環境変数の設定
export LC_ALL=C
export LANG=C

# GNU coreutilsの挙動をPOSIXに準拠
export POSIXLY_CORRECT=1

# 引数を変数に代入
first_arg="${1}"
second_arg="${2}"

# isbnをパイプで受け取った場合
if [ -p /dev/stdin ] ; then

	# 真の場合は標準入力を変数に代入
	isbn=$(cat - )

	# 他のシェルスクリプトから呼び出された場合の処理
	# isbnが空であればisbnにfirst_argを代入
	test -z "${isbn}" && isbn="${first_arg}"

	# second_argに第1引数を代入
	second_arg="${first_arg}"

# 第1引数が1以上の数値であれば真
elif [ "${first_arg}" -gt 0 ] ; then

	isbn="${first_arg}"

fi
# ====== 変数の設定ここまで ======

set -u

# wgetがシステム内に存在するかを確認
if type wget > /dev/null 2>&1 ; then

	# wgetでapiを叩く
	wget -q -O - "https://ndlsearch.ndl.go.jp/api/opensearch?isbn=${isbn}"

# curlがシステム内に存在するかを確認
elif type curl > /dev/null 2>&1 ; then
	
	# curlでapiを叩く
	curl -s "https://ndlsearch.ndl.go.jp/api/opensearch?isbn=${isbn}"

else

	# wgetもcurlもない場合はメッセージを表示
	echo 'please install "wget" or "curl"' 1>&2

fi |

grep "<dc:subject xsi:type=\"dcndl:NDC[0-9]*\"" |

# 区切り文字に"<"と">"を指定,awk変数にシェル変数を代入
awk -F "[<>]" -v isbn="${isbn}" -v ndc="${second_arg}" '

BEGIN{

	# 出力時の区切り文字をカンマに指定
	OFS = ","

}

# NDC9とNDC10が両方ある場合はNDC10のみ出力
END{

	# ndcが"ndc_only"であれば真
	if(ndc == "ndc_only"){

		print $3	

	}else{

		print isbn, $3

	}

}
'
