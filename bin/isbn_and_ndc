#!/bin/sh 

set -eu

# ====== 変数の設定 ======
# 環境変数の設定
export LC_ALL=C
export LANG=C

# GNU coreutilsの挙動をPOSIXに準拠
export POSIXLY_CORRECT=1

# 処理元のファイル
# 引数の有無を確認,あれば真,無ければ偽
if [ -n "${1}" ] ; then

	# 真の場合は保存先を引数で指定
	source_file="${1}"

fi

# 保存先のファイル
if [ -n "${2}" ] ; then

	# 真の場合は保存先を引数で指定
	export_file="${2}"

fi

# デフォルトの変数
num="0"
# ====== 変数の設定ここまで ======


# 変数lineを宣言し一行ずつファイルを読み込む
while read -r line

	do

		# 変数numを1ずつインクリメント
		num=$((num + 1))

		# numを5で割った剰余が0出ない場合に真
		if [ $((num % 5)) != 0 ] ; then

			# ISBN飲みを抽出,"ndc_search"に渡しteeで保存
			echo "${line}" | cut -d"," -f1 | ndc_search | tee -a "${export_file}"

		else

			# サーバーへの負荷を抑えるために5秒間sleep
			sleep 5

		fi

	# 指定されたファイルを読み込み
	done < "${source_file}"

